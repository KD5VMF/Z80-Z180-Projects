10 REM *** STARFIELD FOR MBASIC-80 (ANSI VT100) ***
20 REM Works in CP/M MBASIC-80 Rev 5.21
30 WIDTH 80
40 CLS$ = CHR$(27)+"[2J"
50 HOME$ = CHR$(27)+"[H"
60 PRINT CLS$;HOME$;
70 RANDOMIZE
80 STARS = 50
90 DIM X(STARS),Y(STARS)
100 FOR I=1 TO STARS
110   X(I) = INT(RND*80)+1
120   Y(I) = INT(RND*24)+1
130 NEXT
140 PRINT "STARFIELD - Press Q to quit";: FOR D=1 TO 500: NEXT D
150 A$ = INKEY$: IF A$="Q" OR A$="q" THEN 300
160 PRINT CLS$;HOME$;
170 FOR I=1 TO STARS
180   X(I) = X(I) + (RND*3 - 1.5)
190   Y(I) = Y(I) + (RND*3 - 1.5)
200   IF X(I) < 1 THEN X(I)=80
210   IF X(I) > 80 THEN X(I)=1
220   IF Y(I) < 1 THEN Y(I)=24
230   IF Y(I) > 24 THEN Y(I)=1
240   PRINT CHR$(27)+"[" + MID$(STR$(INT(Y(I))),2) + ";" + MID$(STR$(INT(X(I))),2) + "H*";
250 NEXT
260 GOTO 150
300 PRINT CLS$;HOME$;"Starfield ended."
310 END
